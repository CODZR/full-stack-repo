  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug FastAPI Project backend: Python Debugger",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload"
      ],
      "cwd": "${workspaceFolder}/backend/fastapi_project",
      "jinja": true,
      "envFile": "${workspaceFolder}/backend/fastapi_project/.venv",
      "env": {
        "POSTGRES_HOST": "localhost"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend: Launch Chrome against http://localhost:3000",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/next-client"
    },
  ]
}